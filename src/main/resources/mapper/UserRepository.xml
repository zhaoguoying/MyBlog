<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.Blog.repository.mybatis.UserRepository">
    <resultMap id="userMap" type="com.Blog.model.User">
        <id property="id" column="id"/>
        <result property="phone" column="phone"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="gender" column="gender"/>
        <result property="trueName" column="trueName"/>
        <result property="birthday" column="birthday"/>
        <result property="email" column="email"/>
        <result property="personalBrief" column="personalBrief"/>
        <result property="recentlyLanded" column="recentlyLanded"/>
        <collection property="roles" ofType="com.Blog.model.Role">
            <result property="id" column="id"/>
            <result  property="name" column="name"/>
        </collection>

    </resultMap>

    <select id="findByPhone" parameterType="String" resultMap="userMap">
        select u.*,r.name
        from user u
        LEFT JOIN user_role sru on u.id= sru.User_id
        LEFT JOIN role r on sru.Role_id=r.id
        where phone= #{phone}
    </select>
</mapper>